<div class="col-md-12">

  <h2 class="text-left"> My participated group </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> 题目 </th>
        <th> 描述 </th>
        <th> 文章数量 </th>
        <th> 上一次更新时间 </th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(group.title, group_path(group)) %> </td>
          <td> <%= group.description %> </td>
          <td> <%= group.posts.count %> </td>
          <td> <%= group.updated_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
