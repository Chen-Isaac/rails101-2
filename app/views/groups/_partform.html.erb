<%= form_for @group do |ff|%>
<% if @group.errors.any? %>
<ul>
  <% @group.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
title
<%= ff.text_field :title %>
<br>
description
<br>
<%= ff.text_area :description %>
<br>

<%= ff.submit "Submit", :disable_with => 'Submiting...' %>
<% end %>
