<div class="col-md-12">
  <div class="group">
    <span class="pull-right">
      <% if current_user && current_user.is_member?(@group) %>
        <label class="label label-success"> Group member </label>
      <% else %>
        <label class="label label-warning"> Not group member </label>
      <% end %>
    </span>
    <%= link_to("Write a Post", new_group_post_path(@group), class: "btn btn-default pull-right")%>
    <% if current_user && current_user == @group.user %>
      <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

  <table class="table">
    <thead>
      <tr>
        <th>article content</th>
        <th>writer</th>
        <th>post time</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |postpost| %>
        <tr>
          <td><%= postpost.content %></td>
          <td><%= postpost.user.email %></td>
          <td><%= postpost.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="text-right">
    <%= will_paginate @posts %>
  </div>
</div>
